{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "hide-files.files": [
        ".vscode",
        ".pytest_cache",
        "__pycache__",
        "tests/mylib/__pycache__",
        "imgui.ini",
        "pytest.ini",
        "requirements.txt",
        "mylib/__pycache__",
        "mylib/__init__.py",
        ".gitignore",
        "_experiments/__pycache__"
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}