{
  "description": "Color mapping functions that convert grayscale values to colors",
  "functions": {
    "grayscale": {
      "display_name": "Grayscale",
      "description": "Grayscale output",
      "params": []
    },
    "gradient3": {
      "display_name": "Color Gradient",
      "description": "Maps grayscale values to a gradient between two colors",
      "params": [
        {
          "name": "start_color",
          "display_name": "Low Color",
          "param_type": "color",
          "default": [0.0, 0.0, 0.0, 1.0],
          "description": "Color for minimum grayscale value"
        },
        {
          "name": "mid_color",
          "display_name": "Middle Color",
          "param_type": "color",
          "default": [0.5, 0.3, 1.0, 1.0],
          "description": "Color for intermediary grayscale value"
        },
        {
          "name": "end_color",
          "display_name": "High Color", 
          "param_type": "color",
          "default": [1.0, 0.8, 0.3, 1.0],
          "description": "Color for maximum grayscale value"
        },
        {
          "name": "mid_position",
          "display_name": "Position of mid color", 
          "param_type": "float",
          "min": 0.0,
          "max": 1.0,
          "default": 0.5,
          "description": "Position of middle color in the gradient"
        }
      ]
    },
    "gradient2_noise": {
      "display_name": "Color Gradient with Noise",
      "description": "Maps grayscale values to a gradient between two colors with noise",
      "params": [
        {
          "name": "start_color",
          "display_name": "Low Color",
          "param_type": "color",
          "default": [0.0, 0.0, 0.0, 1.0],
          "description": "Color for minimum grayscale value"
        },
        {
          "name": "end_color",
          "display_name": "High Color", 
          "param_type": "color",
          "default": [1.0, 0.8, 0.3, 1.0],
          "description": "Color for maximum grayscale value"
        },
        {
          "name": "noise_scale",
          "display_name": "Noise Scale",
          "param_type": "float",
          "min": 0.0,
          "max": 10.0,
          "default": 1.0,
          "description": "Scale factor for noise",
          "logarithmic": true
        },
        {
          "name": "noise_octaves",
          "display_name": "Noise Octaves",
          "param_type": "int",
          "min": 1,
          "max": 10,
          "default": 4,
          "description": "Number of noise octaves"
        },
        {
          "name": "noise_gain",
          "display_name": "Noise Gain",
          "param_type": "float",
          "min": 0.0,
          "max": 1.0,
          "default": 0.5,
          "description": "Noise gain"
        },
        {
          "name": "noise_time_scale_factor",
          "display_name": "Noise Time Scale Factor",
          "param_type": "float",
          "logarithmic": true,
          "min": 0.0,
          "max": 10.0,
          "default": 1.0,
          "description": "Time scale factor for noise"
        },
        {
          "name": "noise_position_scale_factor",
          "display_name": "Noise Position Scale Factor Per Octave",
          "param_type": "float",
          "logarithmic": true,
          "min": 0.0,
          "max": 10.0,
          "default": 1.0,
          "description": "Position scale factor for noise"
        },
        {
          "name": "noise_rotation_angle_increment",
          "display_name": "Noise Rotation Angle Incremen Per Octave",
          "param_type": "float",
          "min": 0.0,
          "max": 6.28318530718,
          "default": 0.1,
          "description": "Rotation angle increment for noise"
        },
        {
          "name": "noise_time_offset_increment",
          "display_name": "Noise Time Offset Increment Per Octave",
          "param_type": "float",
          "min": 0.0,
          "max": 10.0,
          "default": 0.1,
          "description": "Time offset increment for noise"
        },
        {
          "name": "hue_shift_factor",
          "display_name": "Hue Shift Factor",
          "param_type": "float",
          "min": 0.0,
          "max": 10.0,
          "default": 1.0,
          "description": "Factor to scale the hue shift based on noise value",
          "logarithmic": true
        }
      ]
    }
  }
}